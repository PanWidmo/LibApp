@model LibApp.Models.Customer

@{ 
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Url.ActionContext.RouteData.Values["id"]">Edit</a>
<ul>
    <li>Email: @Model.Email</li>
    <li>Has Newsletter Subscribed: @Model.HasNewsletterSubscribed.ToString()</li>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Birthdate: @Model.Birthdate.Value.ToShortDateString()</li>
    }
    <li>Role Type: @Model.RoleType.Name</li>

</ul>